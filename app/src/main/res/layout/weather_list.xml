<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtCenciusMin"
        android:text="15ºC"
        android:textSize="20sp"
        android:textColor="#e64747"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtCenciusMax"
        android:text="30ºC"
        android:textSize="25sp"
        android:textColor="#ff00"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtDay"
        android:text="2017-09-24 09:00:00"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtState"
        android:text="Cloud"
        android:textColor="#0020f2"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/txtCenciusMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtPressure"
        android:text="- Pressure: 1000.3"
        android:textSize="15sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@id/txtCenciusMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtDesc"
        android:text="- Deescription: scattered clouds"
        android:textSize="15sp"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@id/txtCenciusMax"
        android:layout_width="170dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:background="#e7d50e"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="15dp"
        android:foregroundGravity="center"
        android:layout_width="350dp"
        android:layout_height="3dp" />

    <ImageView
        android:src="@drawable/sun"
        android:id="@+id/imgHinh"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/txtDesc"
        android:background="@null"/>

</RelativeLayout>